<% if current_user.liking?(micropost) %>
  <%= form_for(current_user.favarites.find_by(micropost_id: micropost.id), html: {method: :delete}) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "Unlike", class: "btn btn-warning " %>
  <% end %>
<% else %>
  <%= form_for(current_user.favarites.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "Like", class: "btn btn-default " %>
  <% end %>
<% end %>